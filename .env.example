# Universal Consultant Intelligence Platform - Environment Configuration

# Application Settings
APP_NAME="Universal Consultant Intelligence Platform"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/consultant_platform"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PREFIX="consultant_platform:"
REDIS_SESSION_TIMEOUT=3600
REDIS_CACHE_TIMEOUT=1800

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL_GPT4="gpt-4"
OPENAI_MODEL_GPT35="gpt-3.5-turbo"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_REQUESTS_PER_MINUTE=60
OPENAI_MAX_TOKENS_PER_MINUTE=40000

# Google Custom Search API
GOOGLE_SEARCH_API_KEY="your-google-search-api-key"
GOOGLE_SEARCH_ENGINE_ID="your-custom-search-engine-id"
GOOGLE_SEARCH_RATE_LIMIT=10

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true
FROM_EMAIL="noreply@consultantplatform.com"
FROM_NAME="Consultant Intelligence Platform"

# Security Configuration
SECRET_KEY="your-super-secret-key-change-in-production"
API_KEY_PREFIX="cp_"
CORS_ORIGINS="http://localhost:3000,https://your-domain.com"
RATE_LIMIT_PER_MINUTE=100
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# File Storage
UPLOAD_DIR="/app/uploads"
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="pdf,docx,txt,csv"

# Monitoring and Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
METRICS_ENABLED=true
SENTRY_DSN=""
PROMETHEUS_PORT=9090

# Web Scraping Settings
SCRAPING_DELAY=1.0  # Seconds between requests
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_USER_AGENT="ConsultantPlatform/1.0 (+https://consultantplatform.com/bot)"
RESPECT_ROBOTS_TXT=true

# Background Tasks
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_WORKER_CONCURRENCY=4